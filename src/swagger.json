{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Blog",
    "description": "Essa API trabalha com as principais funcionalidades de um blog. Nela você pode criar, atualizar, excluir e listar blog posts, categorias e usuários.",
    "contact": {
      "email": "lauropereirasr01@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login",
        "description": "Essa rota é responsável por fazer o login na API.",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "login": {
                  "value": {
                    "email": "red.pkmn@pokemail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Login inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Cadastro de usuário",
        "description": "Essa rota é responsável por cadastrar novos usuários, recebendo seu nome de exibição, email, senha e, opcionalmente, imagem de perfil.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUser"
              },
              "examples": {
                "user": {
                  "value": {
                    "displayName": "Blue PKMN",
                    "email": "blue.pkmn@pokemail.com",
                    "password": "123456",
                    "image": "https://archives.bulbagarden.net/media/upload/d/db/FireRed_LeafGreen_Blue.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "400": {
            "description": "Campos ou valores inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "409": {
            "description": "Usuário já cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar usuários",
        "description": "Essa rota é responsável por listar todos os usuários",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Token inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/ErrorMessage"
                  }
                }
              }
            }
          },
          "200": {
            "description": "Usuários listados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "summary": "Buscar usuário pelo ID",
        "description": "Essa rota é responsável por buscar um usuário pelo seu ID",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do usuário para buscar",
            "required": true
          }
        ],
        "responses": {
          "404": {
            "description": "Usuário não existe",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "200": {
            "description": "Usuário listado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/user/me": {
      "delete": {
        "summary": "Deleta o usuário logado",
        "description": "Deleta o usuário logado",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "204": {
            "description": "Usuário deletado com sucesso"
          }
        }
      }
    },
    "/categories": {
      "post": {
        "summary": "Cadastra uma nova categoria",
        "description": "Essa rota é responsável por cadastrar uma nova categoria.",
        "tags": ["Categories"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewCategory"
              },
              "examples": {
                "category": {
                  "value": {
                    "name": "Pokemon"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "400": {
            "description": "Campos ou valores inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "201": {
            "description": "Categoria cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Category"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar categorias",
        "description": "Essa rota é responsável por listar todas as categorias",
        "tags": ["Categories"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Token inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/ErrorMessage"
                  }
                }
              }
            }
          },
          "200": {
            "description": "Categorias listadas com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post": {
      "post": {
        "summary": "Cria um blog post",
        "description": "Essa rota é responsável por criar um novo blog post",
        "tags": ["Post"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewBlogPost"
              },
              "examples": {
                "blogpost": {
                  "value": {
                    "title": "Título aleatório",
                    "content": "Conteúdo aleatório",
                    "categoryIds": ["1", "2"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "400": {
            "description": "Campos ou valores inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "201": {
            "description": "Blog post criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/NewBlogPostResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar blog posts",
        "description": "Essa rota é responsável por listar todos os blog posts",
        "tags": ["Post"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "200": {
            "description": "Blog post listados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BlogPost"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post/search": {
      "get": {
        "summary": "Buscar um blog post pelo seu título ou conteúdo",
        "description": "Essa rota é responsável por buscar um ou mais blog posts pelo seu título ou conteúdo",
        "tags": ["Post"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Título ou conteúdo para buscar"
          }
        ],
        "responses": {
          "200": {
            "description": "Blog post listados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BlogPost"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post/{id}": {
      "get": {
        "summary": "Buscar blog post pelo ID",
        "description": "Essa rota é responsável por buscar um blog post pelo seu ID",
        "tags": ["Post"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do blog post para buscar",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "404": {
            "description": "Blog post não existe",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "200": {
            "description": "Blog post listado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/BlogPost"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Editar um blog post",
        "description": "Essa rota é responsável por editar um blog post pelo seu ID",
        "tags": ["Post"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do blog post para editar",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EditingBlogPost"
              },
              "examples": {
                "editingPost": {
                  "value": {
                    "title": "Outro título aleatório",
                    "content": "Outro conteúdo aleatório"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "400": {
            "description": "Campos ou valores inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "200": {
            "description": "Blog post editado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/BlogPost"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletar um blog posts pelo ID",
        "description": "Essa rota é responsável por deletar um blog post pelo seu ID",
        "tags": ["Post"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do blog post para deletar",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "$ref": "#/components/schemas/UnauthorizedError"
          },
          "404": {
            "description": "Blog post não existe",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "204": {
            "description": "Blog post deletado com sucesso"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "NewUser": {
        "type": "object",
        "required": ["displayName", "email", "password"],
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "description": "Campo opcional"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "description": "Campo opcional"
          }
        }
      },
      "UnauthorizedError": {
        "description": "Token de acesso não autorizado"
      },
      "NewCategory": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "NewBlogPost": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "categoryIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "NewBlogPostResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "userId": {
            "type": "number"
          },
          "published": {
            "type": "string"
          },
          "updated": {
            "type": "string"
          }
        }
      },
      "BlogPost": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "userId": {
            "type": "number"
          },
          "published": {
            "type": "string"
          },
          "updated": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number"
              },
              "displayName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "image": {
                "type": "string"
              }
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "EditingBlogPost": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
